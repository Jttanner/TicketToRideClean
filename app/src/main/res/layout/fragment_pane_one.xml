<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="ui.views.PaneOneFragment">

    <ui.views.PlayerStatsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statusLayout"
        android:textColor="#FFFFFF"
        app:extraInformation="My extra information"
        android:id="@+id/player_stats"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_turn"
        android:text="Current Turn: "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatButton"
        android:text="Chat Room" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameHistoryButton"
        android:text="Game History" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destinationCardButton"
        android:text="Destination Cards"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dest Deck size: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destination_deck_size"
            android:text="30"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_cards_in_deck"
        android:text="Cards in Deck: "/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="150px"
        android:id="@+id/first_drawable_card"
        />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="150px"
        android:id="@+id/second_drawable_card"
        />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="150px"
        android:id="@+id/third_drawable_card"
        />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="150px"
        android:id="@+id/fourth_drawable_card"
        />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="150px"
        android:id="@+id/fifth_drawable_card"
        />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="150px"
        android:id="@+id/drawable_deck"
        />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/demoButton"-->
        <!--android:text="Demo"-->
        <!--/>-->


</LinearLayout>
